@{
    ViewBag.Title = "Trainer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Estilos {
    <link href="~/lib/datatables2/css/datatables.datatables.css " rel="stylesheet" />
}
<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fa-solid fa-user-group"></i>
                Lista de Entrenadores
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <button class="btn btn-success" id="btnNuevo"> <i class="fa-solid fa-plus"></i>  Nuevo Entrenador</button>
                    </div>
                </div>
               
                <div class="row">
                    <div class="col-sm-12">
                        <table class="display cell-border" id="tbData" cellspacing="0" style="width:100%">
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="mdData" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Entrenador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <label class="col-form-label">Rut:</label>
                        <input type="text" class="form-control data-in" id="txtRut" autocomplete="off" name="Rut">
                    </div>
                    <div class="col-sm-6">
                        <label class="col-form-label">Nombre:</label>
                        <input type="text" class="form-control data-in" id="txtNombre" autocomplete="off" name="Nombre">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label class="col-form-label">Apellido:</label>
                        <input type="text" class="form-control data-in" id="txtApellido" autocomplete="off" name="Apellido">
                    </div>
                    <div class="col-sm-6">
                        <label class="col-form-label">Correo:</label>
                        <input type="email" class="form-control data-in" id="txtCorreo" autocomplete="off" name="Correo">
                    </div>
                    <div class="col-sm-3">
                        <div class="mb-4">
                        <label class="col-form-label fs-2">Género:</label>
                        <select class="form-select form-select-lg mb-4 data-in w-150" id="txtGenero" autocomplete="off" name="Genero">
                            <option value="N/A">N/A</option>
                            <option value="MUJER">Mujer</option>
                            <option value="HOMBRE">Hombre</option>
                        </select>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label class="col-form-label">Telefono:</label>
                        <input type="text" class="form-control data-in" id="txtTelefono" autocomplete="off" name="Telefono">
                    </div>
                
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalPagos" tabindex="-1" aria-labelledby="modalPagosLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalPagosLabel">Pagos del Entrenador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="tablaPagos" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Fecha de Pago</th>
                            <th>Monto</th>
                            <th>Descripción</th>
                            <th>Boleta</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables2/js/moment.min.js"></script>
    <script src="~/lib/datatables2/js/datatables.js"></script>
    <script src="~/views/Trainer.js"></script>

}   