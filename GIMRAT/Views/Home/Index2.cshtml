@{
    ViewData["Title"] = "Home Page";
}

<h1 class="mt-4">Resumen</h1>

<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col me-2">
                        <div class="">Total Clientes</div>
                        <div class="fw-bold"><span id="TotalClientes"></span></div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-user-group fa-2xl"></i>
                    </div>
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Capacidad
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800"><span id="capacidad"></span></div>
                            </div>
                            <div class="col">
                                <div class="progress progress-sm mr-2">
                                    <div class="progress-bar bg-info" role="progressbar"
                                         style="width: 73%" aria-valuenow="50" aria-valuemin="0"
                                         aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col me-2">
                        <div class="">Suscripciones Inactivas</div>
                        <div class="fw-bold"><span id="SuscripcionesOFF"></span></div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-hourglass-half fa-2xl"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col me-2">
                        <div class="">Susripciones Activas</div>
                        <div class="fw-bold"><span id="SuscripcionesON"></span></div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-money-check-dollar fa-2xl"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col me-2">
                        <div class="">Ganancias del mes</div>
                        <div class="fw-bold"><span id="TotalMensual"></span></div>
                    </div>
                    <div class="col-auto">
                        <i class="fa-solid fa-money-bill-trend-up fa-2xl"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/views/home.js"></script>
}